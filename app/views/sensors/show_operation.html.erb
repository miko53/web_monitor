<h1>Operation list </h1>
<h2>Sensor ID <%=@sensor.order %> </h2>
<p>
  on Device <%=@sensor.device.name %> in  <%=@sensor.device.location %></p>
<p>
  <%= link_to 'Add operation', new_operation_path(:sensor_id => @sensor.id) %>
</p>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Id</th>
      <th>Type</th>
      <th>Period</th>
      <th>Begin Time</th>
    </tr>
  </thead>
  <tbody>
  <%= render @sensor.operations %>
  </tbody>
</table>
