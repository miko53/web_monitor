
<%= form_for(@report, html: { class: "form-horizontal" }) do |f| %>
<div class="form-group ">
  <%= f.label "Title", {:class => 'col-sm-2 control-label'} %> 
  <div class = 'col-sm-10'>
    <%= f.text_field :name, {:class => 'form-control ', :value => "Trends" } %>
  </div>
</div>
<div class="form-group">
  <%= add_child_button "Add Device",:device_of_reports,"#device_of_reports" %>
  <%= new_fields_template f, :device_of_reports %>
</div>
<div id="device_of_reports" class="row">
    <%= f.fields_for :device_of_reports do |builder| %>
    <div>
      <%= render "device_of_report_fields", :f => builder %>
    </div>
    <% end %>
</div>
<div class="form-group">
  <%= f.label "report begin", {:class => 'col-sm-2 control-label'} %>
  <div class = 'col-sm-10'>
  <%= f.datetime_local_field(:dateBegin, { :class => 'form-control', :value => DateTime.now.since(-1.days).strftime("%Y-%m-%dT%H:%M:%S") }) %>
  </div>
</div>
<div class="form-group">
  <%= f.label "report end", {:class => 'col-sm-2 control-label'} %>
  <div class = 'col-sm-10'>
  <%= f.datetime_local_field(:dateEnd, { :class => 'form-control', :value => DateTime.now.strftime("%Y-%m-%dT%H:%M:%S") }) %>
  </div>
</div>

<div class="action form-group">
  <div class = 'col-sm-offset-2 col-sm-10'>
  <%= f.submit "Create" %>
  </div>
</div>
<%end %>
