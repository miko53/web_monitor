<ul>
<li>Date format is YYYY-MM-DD HH:MM:SS or now </li>
<li>Insert 'raw' as operation to have the value directly from the sensor</li>
</ul>
<%= form_for(@report, html: { class: "form-horizontal" }) do |f| %>
<%= f.hidden_field( :user_id, :value => @report.user_id ) %>
<div class="form-group">
  <%= f.label "Title", {:class => 'col-sm-2 control-label'} %> 
  <div class = 'col-sm-10'>
    <%= f.text_field :name, {:class => '' } %>
  </div>
</div>
<div id='graphs' >
  <div class='links' >
  <div class='row' >
  <%= link_to_add_association 'Add graphics', f, :graphs, 'data-association-insertion-method' => 'append', 
                                                          'data-association-insertion-node'      => '.links',
                                                          'data-association-insertion-traversal' => 'closest',
                                                  :class => 'col-sm-2 col-sm-offset-0 btn btn-success glyphicon glyphicon-plus' %>
  </div>
  </div>
  <%= f.fields_for :graphs do |graph| %>
    <%= render 'graph_fields', :f => graph %>
  <% end %>
</div>
<div class="form-group">
  <%= f.label "set a duration", {:class => 'col-sm-2 control-label'} %>
  <div class = 'col-sm-10'>
  <%= f.check_box(:isRangeSet, { :class => 'col-sm-offset-2' }) %>
  </div>
</div>
<div class="form-group">
  <%= f.label "report begin", {:class => 'col-sm-2 control-label'} %>
  <div class = 'col-sm-10'>
  <%= f.text_field(:dateBegin, { :class => '' }) %>
  </div>
</div>
<div class="form-group">
  <%= f.label "report end", {:class => 'col-sm-2 control-label'} %>
  <div class = 'col-sm-10'>
  <%= f.text_field(:dateEnd, { :class => '' }) %>
  </div>
</div>
<div class="form-group">
  <%= f.label "duration (in day)", {:class => 'col-sm-2 control-label'} %>
  <div class = 'col-sm-10'>
  <%= f.text_field(:dayRangeFromEnd, { :class => '' }) %>
  </div>
</div>
<div class="action form-group">
  <div class = 'col-sm-offset-2 col-sm-10'>
  <%= f.submit "Create" %>
  </div>
</div>
<%end %>
  