<h1>Report List</h1>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
    </tr>
  </thead>
  <tbody>
    <% @reports.each do |report| %>
      <tr>
        <td>
          <%= report.name %>
        </td>
        <td>
          <%= link_to report_path(report), report_path(report)  %>
        </td>        
     </tr>
    <% end %>
  </tbody>
</table>

