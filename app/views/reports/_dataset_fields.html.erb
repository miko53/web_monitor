<div class='nested-fields form-group'>
  <div class = 'col-sm-10' >
  <%= f.label 'Device name', {:class => 'col-sm-2 col-sm-offset-2 control-label'} %>
    <%= f.text_field :device_name, { :class => 'col-sm-2' } %>
  </div>
  <div class = 'col-sm-10' >
  <%= f.label 'Sensor name', {:class => 'col-sm-2 col-sm-offset-2 control-label'} %>
    <%= f.text_field :sensor_name, { :class => 'col-sm-2' } %>
    <%= link_to_remove_association ' ', f, { :class => 'col-sm-2 glyphicon glyphicon-minus' } %>
  </div>
  <div class = 'col-sm-10' >
  <%= f.label 'Operation', {:class => 'col-sm-2 col-sm-offset-2 control-label'} %>
    <%= f.text_field :operation_name, { :class => 'col-sm-2' } %>
  </div>
</div>
