<%= form_for(@operation, html: { class: "form-horizontal" }) do |f| %>
<%= f.hidden_field( :sensor_id, :value => @operation.sensor_id ) %>
<div class="form-group">
  <%= f.label "name", {:class => 'col-sm-2 control-label'} %>
  <div class = 'col-sm-10'>
  <%= f.text_field(:name, { :class => '' }) %>
  </div>
</div>
 <div class="form-group">
  <%= f.label "Type of calcul", {:class => 'col-sm-2 control-label'} %> 
  <div class = 'col-sm-10'>
  <%= f.select(:calcul_type, 
                 options_for_select( [
                  ['Maximum', 'Max'], 
                  ['Minimum', 'Min'], 
                  ['Average', 'Moy']])
                 )%>
  </div>
</div>
 <div class="form-group">
  <%= f.label "Period unit", {:class => 'col-sm-2 control-label'} %> 
    <div class = 'col-sm-10'>
    <%= f.select(:period_unit, 
                  options_for_select( [
                    ['Minutes', PeriodHelper::MINUTE],
                    ['Hours', PeriodHelper::HOUR],
                    ['Days', PeriodHelper::DAY],
                    ['Month', PeriodHelper::MONTH]
                    ], @operation.period_unit)
                  )%>
    </div>
 </div>
<div class="form-group">
  <%= f.label "period", {:class => 'col-sm-2 control-label'} %>
  <div class = 'col-sm-10'>
  <%= f.text_field(:period, { :class => '' }) %>
  </div>
</div>
<div class="action form-group">
  <div class = 'col-sm-offset-2 col-sm-10'>
  <%= f.submit "Create" %>
  </div>
</div>
<%end %>

