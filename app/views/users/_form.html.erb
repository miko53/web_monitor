<%= form_for(@user, html: { class: "form-horizontal" }) do |f| %>
<div class="form-group">
  <%= f.label "login", {:class => 'col-sm-2 control-label'} %>
  <div class = 'col-sm-10'>
  <%= f.text_field  :user_name, { :class => '', :readonly => (@user.user_name == "admin") } %>
  </div>
</div>
<div class="form-group ">
  <%= f.label "Complete name", {:class => 'col-sm-2 control-label'} %> 
  <div class = 'col-sm-10'>
    <%= f.text_field :name, {:class => '' } %>
  </div>
</div>
<div class="form-group ">
  <%= f.label "email", {:class => 'col-sm-2 control-label'} %> 
  <div class = 'col-sm-10'>
    <%= f.text_field :email, {:class => '' } %>
  </div>
</div>
<div class="form-group">
  <%= f.label "password", {:class => 'col-sm-2 control-label'} %> 
  <div class = 'col-sm-10'>
    <%= f.password_field :password, {:class => '' } %>
  </div>
</div>
<div class="form-group">
  <%= f.label "password confirmation", {:class => 'col-sm-2 control-label'} %> 
  <div class = 'col-sm-10'>
    <%= f.password_field :password_confirmation, {:class => '' } %>
  </div>
</div>
<div class="action form-group">
  <div class = 'col-sm-offset-2 col-sm-10'>
  <%= f.submit "Create" %>
  </div>
</div>
<%end %>
