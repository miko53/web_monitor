<%= form_for(@device, html: { class: "form-horizontal" }) do |f| %>
<div class="form-group">
  <%= f.label "address", {:class => 'col-sm-2 control-label'} %>
  <div class = 'col-sm-10'>
  <%= f.text_field  :address, { :readonly => true, :class => 'form-control' } %>
  </div>
</div>
<div class="form-group ">
  <%= f.label "Name", {:class => 'col-sm-2 control-label'} %> 
  <div class = 'col-sm-10'>
    <%= f.text_field :name, {:class => '' } %>
  </div>
</div>
<div class="form-group ">
  <%= f.label "Location", {:class => 'col-sm-2 control-label'} %> 
  <div class = 'col-sm-10'>
    <%= f.text_field :location, {:class => '' } %>
  </div>
</div>
<div class="form-group">
  <%= f.label "store data from samples", {:class => 'col-sm-2 control-label'} %>
  <div class = 'col-sm-10'>
  <%= f.check_box(:follow, { :class => 'col-sm-offset-2' }) %>
  </div>
</div>
<div class="action form-group">
  <div class = 'col-sm-offset-2 col-sm-10'>
  <%= f.submit "Update" %>
  </div>
</div>
<%end %>
  