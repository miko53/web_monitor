<h1>Device <%= @device.name %></h1>
<p>
  location <%= @device.location %> 
</p>
<h3>Sensor list</h3>
<p>
  <%= button_to "Refresh", "", { :onclick => "history.go(0)" }  %> 
</p>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Flow ID</th>
      <th>Name</th>
      <th>Type</th>
      <th>Last value</th>
      <th>Operation on data</th>
      <th>Sample data</th>
      <th>Update</th>
    </tr>
  </thead>
  <tbody>
  <%= render @device.sensors %>
  </tbody>
</table>
<h3>Actuator list</h3>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Flow ID</th>
      <th>Name</th>
      <th>Type</th>
      <th>Last value</th>
      <th>Forced operation </th>
      <th>Update</th>
    </tr>
  </thead>
  <tbody>
  <%= render @device.actuators %>
  </tbody>
</table>

