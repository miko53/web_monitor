<h1>Sensor List of Device <%= @device.name %></h1>
<p>in <%= @device.location %> </p>
<table class="table table-hover">
  <thead>
    <tr>
      <th>order</th>
      <th>type</th>
      <th>data samples</th>
    </tr>
  </thead>

  <tbody>
    <% @sensors.each do |sensor| %>
      <tr>
        <td>
			<%= sensor.order %>
        </td>
        <td>
			<%= sensor.type %>
        </td>
        <td>
      <%= link_to sensor_path(sensor), sensor_path(sensor) %>
        </td>          
     </tr>
    <% end %>
  </tbody>
</table>

