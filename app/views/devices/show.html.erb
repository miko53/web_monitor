<h1>Sensor list of Device <%= @device.name %></h1>
<p>in <%= @device.location %> </p>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Flow ID</th>
      <th>Type</th>
      <th>Samples</th>
    </tr>
  </thead>
  <tbody>
    <% @sensors.each do |sensor| %>
      <tr>
        <td>
          <%= sensor.order %>
        </td>
        <td>
          <%= sensor.type %>
        </td>
        <td>
          <%= link_to 'Edit operation', sensor_show_operation_path(sensor), class: 'btn btn-primary btn-xs' %>
        </td>
        <td>
          <%= link_to sensor_path(sensor), sensor_path(sensor) %>
        </td>          
     </tr>
    <% end %>
  </tbody>
</table>

